name:                lupo
version:             0.1
synopsis:            A personal web diary.
description:         A personal web diary.
license:             LGPL-3
license-file:        LICENSE
author:              Keita Mizuochi
maintainer:          mizon9@gmail.com
stability:           Experimental
category:            Web
build-type:          Simple
cabal-version:       >= 1.8

executable lupo
  main-is:           Main.hs
  build-depends:
    base                      >= 4 && < 5,
    lupo
  if impl(ghc >= 6.12.0)
    ghc-options: -threaded -Wall -fwarn-tabs -funbox-strict-fields -O2
                 -fno-warn-unused-do-bind
  else
    ghc-options: -threaded -Wall -fwarn-tabs -funbox-strict-fields -O2

test-suite test
  type:              exitcode-stdio-1.0
  hs-source-dirs:    spec
  main-is:           Main.hs
  ghc-options:       -Wall
  build-depends:
    HDBC                      >= 2.3,
    HDBC-sqlite3              >= 2.3,
    MonadCatchIO-transformers >= 0.2.1 && < 0.4,
    QuickCheck                >= 2.5,
    attoparsec                >= 0.10,
    base                      >= 4 && < 5,
    data-default              >= 0.5,
    data-lens                 >= 2.10,
    enumerator                >= 0.4   && < 0.5,
    hspec                     >= 1.2,
    lupo,
    mtl                       >= 2     && < 3,
    shakespeare-text          >= 1.0,
    text                      >= 0.11,
    time                      >= 1.4,
    xmlhtml                   >= 0.2

library
  hs-source-dirs:    src
  ghc-options:       -Wall -O2
  build-depends:
    HDBC                      >= 2.3,
    HDBC-sqlite3              >= 2.3,
    MonadCatchIO-transformers >= 0.2.1 && < 0.4,
    attoparsec                >= 0.10,
    base                      >= 4     && < 5,
    bytestring                >= 0.9.1 && < 0.10,
    containers                >= 0.4,
    convertible               >= 1.0,
    data-lens                 >= 2.10,
    directory                 >= 1.1,
    enumerator                >= 0.4   && < 0.5,
    filepath                  >= 1.3,
    heist                     >= 0.8   && < 0.9,
    mtl                       >= 2     && < 3,
    old-locale                >= 1.0,
    placeholders              >= 0.1,
    placeholders              >= 0.1,
    shakespeare-text          >= 1.0,
    snap                      >= 0.9   && < 0.10,
    snap-core                 >= 0.9   && < 0.10,
    snap-server               >= 0.9   && < 0.10,
    text                      >= 0.11,
    time                      >= 1.4,
    xmlhtml                   >= 0.2,
    yaml                      >= 0.8
  exposed-modules:
    Lupo.AdminHandler,
    Lupo.Application,
    Lupo.Config,
    Lupo.Database,
    Lupo.Exception,
    Lupo.FieldValidator,
    Lupo.Locale,
    Lupo.Main,
    Lupo.Navigation,
    Lupo.Notice,
    Lupo.PublicHandler,
    Lupo.Syntax,
    Lupo.Util,
    Lupo.View,
    Lupo.ViewFragment
